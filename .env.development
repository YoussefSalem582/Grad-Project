# =================================================
# EmoSense App - Development Environment
# =================================================
#
# Configuration optimized for local development:
# - Local backend connection
# - Enhanced debugging and logging
# - Mock data enabled for offline development
# - Relaxed security for easier testing
#

# =================================================
# Development API Configuration
# =================================================

# Local development server
# Make sure your backend is running on this port
API_BASE_URL=http://localhost:8002

# Development API key
# Use a different key than production for security
API_KEY=dev-api-key

# Shorter timeout for faster development feedback
API_TIMEOUT=30000

# =================================================
# Development Environment Settings
# =================================================

ENVIRONMENT=development

# Enable all debug features for development
DEBUG_MODE=true

# =================================================
# Development Feature Flags
# =================================================

# Mock data allows development without backend
ENABLE_MOCK_DATA=true

# Detailed logging for debugging API issues
ENABLE_LOGGING=true

# Analytics can be enabled or disabled for testing
ENABLE_ANALYTICS=true

# =================================================
# Development Performance Settings
# =================================================

# Shorter cache timeout for seeing changes quickly
CACHE_TIMEOUT=1800

# Smaller cache size for development devices
MAX_CACHE_SIZE=52428800

# Shorter timeouts for faster development cycle
CONNECT_TIMEOUT=15000
RECEIVE_TIMEOUT=15000
